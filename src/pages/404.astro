---
import BaseLayout from "../layouts/BaseLayout.astro";

const meta = {
  description: "Page not found - Patrick Youssef",
};
---

<BaseLayout title="404 - Page Not Found" meta={meta}>
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center space-y-6 fade-in">
    <div class="space-y-4">
      <h1 class="text-6xl md:text-8xl font-serif font-bold text-accent">404</h1>
      <h2 class="text-2xl md:text-3xl font-serif text-gray-700">Page Not Found</h2>
      <p class="text-lg text-gray-600 max-w-md mx-auto leading-relaxed">
        The page you're looking for doesn't exist. It might have been moved, deleted, or you may have entered the wrong
        URL.
      </p>
    </div>

    <div class="space-y-4">
      <a
        href="/"
        class="inline-flex items-center px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200 shadow-lg hover:shadow-xl"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Home
      </a>

      <div class="flex flex-wrap justify-center gap-4 text-sm">
        <a href="/blog" class="text-accent hover:underline">Blog</a>
        <a href="/projects" class="text-accent hover:underline">Projects</a>
        <a href="/musings" class="text-accent hover:underline">Musings</a>
      </div>
    </div>
  </div>
</BaseLayout>
