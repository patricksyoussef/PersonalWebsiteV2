---
import BentoCard from "./BentoCard.astro";

const size = "small";
const { entry, extraStyle } = Astro.props;
const slug = `/blog/${entry.data.slug}`;
---

<BentoCard size={size} slug={slug} className={`border-[1px] border-edge rounded-xl hover:bg-blue-200`} extraStyle={extraStyle}>
  <div class="h-full w-full">
    <div>{entry.data.title}</div>
  </div>
</BentoCard>
