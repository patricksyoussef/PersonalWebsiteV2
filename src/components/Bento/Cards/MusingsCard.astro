---
import BentoCard from "./BentoCard.astro";

const size = "small";
const { entry } = Astro.props;
const path = `/musings/${entry.data.slug}`;
---

<BentoCard size={size} path={path} className={`border-[1px] border-edge rounded-lg hover:bg-blue-200`}>
  <div>This is some content</div>
</BentoCard>
