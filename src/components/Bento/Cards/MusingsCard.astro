---
import BentoCard from "./BentoCard.astro";

const size = "small";
const { entry, extraStyle } = Astro.props;
const path = `/musings/${entry.data.slug}`;
---

<BentoCard size={size} path={path} className={`border-[1px] border-edge rounded-lg hover:bg-blue-200`} extraStyle={extraStyle}>
  <div>{entry.data.title}</div>
</BentoCard>
