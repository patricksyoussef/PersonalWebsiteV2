---
const { entry, frontmatter, extraStyle } = Astro.props;
import { Image } from "astro:assets";
import { formatDate } from "../../utils/cardUtils";
const src = entry.data.cover;
const subTitleStr = `${formatDate(entry)} Â· ${frontmatter.minutesRead}`;
---

<div class={`mb-8 md:mt-8 md:text-[18px] ${extraStyle}`}>
  <div class="max-w-prose mx-auto">
    <div class="text-xl mb-2 text-extralight">{subTitleStr}</div>
    <div class="text-3xl md:text-5xl text-bold text-black mb-4">{entry.data.title}</div>
  </div>
  <div class="-mx-4 md:-mx-8 mb-12">
    <Image src={src} widths={[240, 540, 720, 1200, 1800, src.width]} class="object-cover w-full max-h-40 md:max-h-80 object-center h-full" alt="" />
  </div>
</div>
