<div
  id="toTop"
  class="fixed bottom-4 right-4 md:bottom-8 md:right-8 border border-edge z-50 rounded-full bg-background p-2 shadow-xl transition-opacity opacity-0 pointer-events-none"
>
  <a href="#" aria-label="Back to top">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 md:w-7 md:h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
    </svg>
  </a>
</div>

<script>
  window.addEventListener("scroll", () => {
    const btn = document.getElementById("toTop");
    if (!btn) return;

    if (window.scrollY > 200) {
      btn.classList.add("opacity-100", "pointer-events-auto");
      btn.classList.remove("opacity-0", "pointer-events-none");
    } else {
      btn.classList.remove("opacity-100", "pointer-events-auto");
      btn.classList.add("opacity-0", "pointer-events-none");
    }
  });
</script>
