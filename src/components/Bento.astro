---
const defaultItems = [
  { size: "large", content: "Large", bgColor: "bg-gray-200" },
  { size: "medium", content: "Medium", bgColor: "bg-gray-300" },
  { size: "small", content: "Small", bgColor: "bg-gray-400" },
  { size: "wide", content: "Wide", bgColor: "bg-gray-500" },
  { size: "tall", content: "Tall", bgColor: "bg-gray-600" },
  { size: "medium", content: "Medium", bgColor: "bg-gray-300" },
];

const gridSizes = {
  large: "col-span-3 row-span-2",
  medium: "col-span-2 row-span-1",
  small: "col-span-1 row-span-1",
  wide: "col-span-4 row-span-1",
  tall: "col-span-2 row-span-2",
};

const { items } = Astro.props;
---

<div class="grid grid-cols-6 gap-4 p-4 sm:grid-cols-4 md:grid-cols-6">
  {
    (items || defaultItems).map((item) => (
      <div
        class={`flex items-center justify-center text-lg font-bold ${gridSizes[item.size]} ${item.bgColor || "bg-gray-200"}`}
      >
        {item.content}
      </div>
    ))
  }
</div>
