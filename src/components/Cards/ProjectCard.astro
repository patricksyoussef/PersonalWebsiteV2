---
import { Image } from "astro:assets";
import ContentCard from "./ContentCard.astro";
import CommonContent from "./CommonContent.astro";
import { joinTags } from "../../utils/cardUtils";

const { entry } = Astro.props;
const slug = `/projects/${entry.data.slug}`;
---

<ContentCard slug={slug}>
  <div class="flex flex-col h-full">
    <CommonContent
      entry={entry}
      toolbarText={joinTags(entry)}
      toolbarStyle="text-xs uppercase tracking-wide text-neutral-600"
      titleStyle="text-gray-900 font-semibold"
      subTitleStyle="text-gray-500"
      tagText="project"
      tagColor="bg-blue-100 text-blue-700"
    />
    <div class="overflow-clip rounded-cards">
      <Image src={entry.data.cover} width={800} alt="" class="max-h-32 min-h-32 object-cover object-center h-full w-full" />
    </div>
  </div>
</ContentCard>
