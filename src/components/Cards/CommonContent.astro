---
import { formatDate, readTime } from "../../utils/cardUtils";

const {
  entry,
  toolbarText = "",
  toolbarStyle = "",
  titleStyle = "",
  subTitleStyle = "",
  tagText = "",
  tagColor = "",
} = Astro.props;
const dateString = formatDate(entry);
const readTimeString = readTime(entry);
---

<div class="p-3 flex flex-col justify-between h-full">
  <div class={`flex flex-row justify-between items-center ${toolbarStyle}`}>
    <div>{toolbarText}</div>
    {
      tagText && (
        <div class={`text-xs px-2 py-0.5 uppercase rounded-full font-medium border ${tagColor}`}>{tagText}</div>
      )
    }
  </div>
  <div class="space-y-1">
    <div
      class={`text-2xl font-medium mt-4 transition-all duration-300 underline-offset-2 underline decoration-transparent ${titleStyle}`}
    >
      {entry.data.title}
    </div>
    <div class={`text-extralight ${subTitleStyle}`}>{dateString} Â· {readTimeString}</div>
    <slot />
  </div>
</div>
