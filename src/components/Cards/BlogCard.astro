---
import ContentCard from "./ContentCard.astro";
import CommonContent from "./CommonContent.astro";

const { entry, ...extraProps } = Astro.props;
const slug = `/blog/${entry.data.slug}`;
---

<ContentCard slug={slug} {...extraProps}>
  <CommonContent
    entry={entry}
    toolbarText={entry.data.category}
    toolbarStyle="text-xs uppercase tracking-wide text-neutral-600"
    titleStyle="text-gray-900 font-serif"
    subTitleStyle="text-gray-600 font-serif"
    tagText="blog"
    tagColor="bg-amber-100 text-amber-700"
  >
    <div class="line-clamp-2">{entry.data.excerpt}</div>
  </CommonContent>
</ContentCard>
