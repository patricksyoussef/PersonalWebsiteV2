---
import { getEntry, render } from "astro:content";
import { Image } from "astro:assets";
import image from "../../content/supplements/images/PatrickGhibliCircle.png";

const entry = await getEntry("supplements", "hero");
const { Content } = await render(entry);
---

<div class="mx-auto drop-in max-w-base grid grid-cols-1 gap-6 md:grid-cols-[2fr_1fr] my-2 md:my-8">
  <div class="prose fade-in text-xl md:text-3xl lg:text-4xl font-serif text-extralight">
    <div class="prose-p:my-0 md:prose-p:font-light md:prose-a:font-normal">
      <div class="hero space-y-6 prose-a:transition prose-a:decoration-transparent hover:prose-a:decoration-accent">
        <Content />
      </div>
    </div>
  </div>
  <div class="fade-in hidden md:flex items-center" style="--anim-idx: 1">
    <Image src={image} width={800} alt="" class="rounded-full shadow-xl" />
  </div>
</div>
