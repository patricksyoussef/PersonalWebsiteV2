---
import BentoCard from "../Bento/Cards/BentoCard.astro";
import Socials from "./Socials.astro";
import "./styles.css";

import { getEntry, render } from "astro:content";
const entry = await getEntry("supplements", "hero");
const { Content } = await render(entry);
---

<BentoCard size="large">
  <div class="text-[2rem] p-4 pl-0 flex flex-col space-y-8 font-light text-gray-600 leading-normal">
    <Content />
    <Socials />
  </div>
</BentoCard>
