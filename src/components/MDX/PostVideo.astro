---
import ContentWrapper from "./ContentWrapper.astro";
const { video, aspectRatio = 1.0, alt = "" } = Astro.props;
let aspectRatioStr = aspectRatio.toFixed(2);
---

<ContentWrapper alt={alt}>
  <video
    class="not-prose"
    controls
    playsinline
    muted
    preload="metadata"
    autoplay="true"
    style={{ objectFit: "contain", maxHeight: "60vh", width: "auto", aspectRatio: aspectRatioStr }}
  >
    <source src={video + "#t=0.0001"} type="video/mp4" />
    <track kind="captions" srclang="en" src="No Sound" />
  </video>
</ContentWrapper>
