---
import { Image } from "astro:assets";
import ContentWrapper from "./ContentWrapper.astro";
const { src, alt, otherProps } = Astro.props;
---

<div {...otherProps}>
  <ContentWrapper>
    <Image src={src} widths={[240, 540, 720, 1200]} class="bg-white object-cover h-full w-full" alt="" />
  </ContentWrapper>
  <div class="text-center italic">{alt}</div>
</div>
