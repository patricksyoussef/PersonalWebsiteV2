---
const { title, number } = Astro.props;
---

<div class="my-16 first:mt-8">
  <div class="flex items-center justify-center gap-4 mb-8">
    <div class="h-px bg-gradient-to-r from-transparent via-gray-400 to-transparent flex-1 max-w-full"></div>
    {number && <span class="text-gray-600 text-2xl font-light tracking-widest uppercase">{number}</span>}
    <div class="h-px bg-gradient-to-r from-transparent via-gray-400 to-transparent flex-1 max-w-full"></div>
  </div>

  <div class="relative">
    <div class="italic text-[2.25em] md:text-[2.75em] font text-center lowercase tracking-tight mb-8 text-gray-800">
      <p class="m-0">{title}</p>
    </div>

    <div class="prose md:text-[20px] max-w-full leading-relaxed mb-12">
      <slot />
    </div>
  </div>
</div>
